<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chess Move Detector"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select two chess board images"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/selectImage1Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Select First Image"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/selectImage2Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Select Second Image"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/detectMovesButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Detect Chess Moves"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#4CAF50"
        android:layout_marginBottom="32dp"
        android:elevation="4dp"
        android:enabled="false"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select two images and tap 'Detect Chess Moves'"
            android:textSize="16sp"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp"/>
    </ScrollView>

</LinearLayout>
